<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeScreen">

    <Button
            android:id="@+id/btnTest"
            android:onClick="Test"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/black" android:textStyle="bold" android:textSize="18sp"
            android:text="Начать тест" android:background="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="244dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="220dp"/>

    <Button
            android:id="@+id/btnRating"
            android:onClick="Rating"
            android:layout_height="51dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/black" android:textStyle="bold" android:textSize="18sp"
            android:text="Рейтинг" android:background="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/btnTest"
            android:layout_width="220dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>